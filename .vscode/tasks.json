{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-debug-start",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*",
          "endsPattern": "^.*runserver.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "docker-debug-setup",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "${workspaceFolder}/scripts/docker-debug.sh"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "docker-compose up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*",
          "endsPattern": "^.*started.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "docker-compose down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Django Migrations",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "-T", "web", "python", "manage.py", "migrate"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Django Createsuperuser",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "web", "python", "manage.py", "createsuperuser"],
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
